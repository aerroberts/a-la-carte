{
    "provider": "openrouter",
    "modelId": "google/gemini-2.5-flash",
    "actions": {
        "watch": {
            "type": "watch",
            "args": {
                "pattern": "packages/carte/**/*.ts",
                "command": "npm run dev"
            }
        },
        "improve": {
            "type": "invoke-ai",
            "args": {
                "inputContext": "packages/carte/src/index.ts",
                "tools": ["write-file"],
                "prompts": ["code-style", "refactor"],
                "commands": ["npx biome lint $FILE_PATH"],
                "guidance": "Refactor and improve the code in the complete source files available to you.",
                "numFullFiles": 20,
                "numScaffoldFiles": 50
            }
        }
    }
}