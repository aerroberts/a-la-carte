{
  "name": "a-la-carte",
  "version": "0.0.1",
  "description": "A hungry developer's toolbox",
  "main": "dist/index.js",
  "scripts": {
    "init": "npm i && npm run build && ./install.sh",
    "build": "tsc",
    "watch": "tsc --watch",
    "ci": "npm run lint && npm run format && npm run check",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.6",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0"
  }
}
