{
  "name": "a-la-carte",
  "version": "0.0.1",
  "description": "A hungry developer's toolbox",
  "private": true,
  "workspaces": [
    "packages/carte",
    "test-resources/sample-repo"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=carte",
    "link": "npm run link --workspace=carte",
    "unlink": "npm run unlink --workspace=carte",
    "ci": "npm run lint && npm run format && npm run check && npm run test:ci",
    "fix": "npm run lint:fix && npm run format:fix && npm run check:fix",
    "lint": "biome lint packages/*/",
    "lint:fix": "biome lint --write packages/*/",
    "format": "biome format packages/*/",
    "format:fix": "biome format --write packages/*/",
    "check": "biome check packages/*/",
    "check:fix": "biome check --write packages/*/",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test:ci --workspaces",
    "test:view-coverage": "npm run test --workspace=carte && open packages/carte/coverage/index.html"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.6",
    "@vitest/coverage-v8": "^3.2.4",
    "vitest": "^3.2.4"
  }
}
