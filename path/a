#!/bin/bash

# Get the directory where the script is located
SCRIPT_DIR="$( cd "$( dirname "$(readlink -f "${BASH_SOURCE[0]}")" )" && pwd )"
BASE_DIR="$(dirname "$SCRIPT_DIR")"

# Check if dist directory exists (compiled TypeScript)
if [ -d "$BASE_DIR/dist" ]; then
  # Use compiled JavaScript
  exec node "$BASE_DIR/dist/index.js" "$@"
else
  echo "Error: A La Carte not built. Please run 'npm install && npm run build' first."
  exit 1
fi